---
import Layout from '../layouts/Layout.astro';
import Counter from '../components/Counter.svelte'

---

<Layout title="Welcome to Astro.">
	<main>
		<h1>Welcome to <span class="text-gradient">Astro</span></h1>
		<Counter client:visible>
			<h1>Hello, Svelte!</h1>
		</Counter>
	</main>
</Layout>

<style>
	h1 {
		margin: 2rem 0;
	}

	main {
		margin: auto;
		padding: 1em;
		max-width: 60ch;
	}
</style>
